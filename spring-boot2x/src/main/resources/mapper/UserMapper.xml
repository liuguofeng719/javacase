<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot2x.mapper.UserMapper">
    <resultMap id="user" type="user">
        <result column="id" property="id"/>
        <result column="user_name" property="userName"/>
        <result column="sex" property="sexEnum"/>
        <result column="note" property="note"/>
    </resultMap>
    <select id="getUserById" parameterType="Long" resultMap="user">
        select * from t_user where id = #{id}
    </select>

    <insert id="saveUser" parameterType="user" useGeneratedKeys="true" keyProperty="id">
        insert into t_user(user_name,sex,note) values(#{userName},#{sexEnum},#{note})
    </insert>
    <delete id="delete" parameterType="Long">
        delete from t_user where id=#{id}
    </delete>
</mapper>